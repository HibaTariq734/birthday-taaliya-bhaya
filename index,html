    <button onclick="showWish()">Get Another Fun Wish ğŸ</button>

    <!-- Confetti Container -->
    <div id="confetti-container"></div>

    <script>
        // Array of fun birthday wishes
        const wishes = [
            "May your birthday be as amazing as your Facebook posts! ğŸ˜ğŸ‚",
            "Cake, gifts, laughter... Hope you get all your favorites today! ğŸğŸ‰",
            "Happy Birthday! May your notifications be full of love â¤ï¸âœ¨",
            "Wishing you a day full of memes, sweets, and endless fun! ğŸ˜„ğŸ°",
            "Keep shining and smiling like your profile picture! ğŸŒŸğŸ˜Š",
            "Cheers to another year of awesomeness and adventures! ğŸ¥³ğŸˆ"
        ];

        // Show random wish
        function showWish() {
            const randomIndex = Math.floor(Math.random() * wishes.length);
            document.getElementById("wish").textContent = wishes[randomIndex];
        }

        // Confetti effect
        function createConfetti() {
            const container = document.getElementById("confetti-container");
            const colors = ["#ff6f91","#ffcb77","#ffe066","#6a4c93","#1982c4"];
            for(let i=0;i<100;i++){
                let confetti = document.createElement("div");
                confetti.classList.add("confetti");
                confetti.style.left = Math.random() * window.innerWidth + "px";
                confetti.style.backgroundColor = colors[Math.floor(Math.random()*colors.length)];
                confetti.style.animationDuration = (3 + Math.random()*3) + "s";
                confetti.style.width = (5 + Math.random()*10) + "px";
                confetti.style.height = confetti.style.width;
                container.appendChild(confetti);
            }
        }

        createConfetti();
    </script>

